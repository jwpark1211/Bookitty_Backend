# Environment Variables Template for Bookitty Application
# Copy this file to .env and fill in the actual values

# Database Configuration
DB_META_URL=jdbc:mysql://your-db-host:3306/meta_db
DB_META_USERNAME=your_db_user
DB_META_PASSWORD=your_db_password

DB_DATA_URL=jdbc:mysql://your-db-host:3306/data_db
DB_DATA_USERNAME=your_db_user
DB_DATA_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# External API Keys
ALADIN_TTB_KEY=your_aladin_api_key

# Slack Notification
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Server Configuration
SERVER_PORT=8080